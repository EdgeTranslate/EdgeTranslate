icon-size = 1em;
color-primary = #4a8cf7;

#head {
	// height: 2%;
	width: 100%;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	background: color-primary;
	&:hover{
		cursor: grabbing;
	}	
}

/**
 * start icon style
 */
.icon {
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    fill: white;
    cursor: pointer;
    font-size: larger;
	padding: 1%; 
	display: block;   

    svg {
        width: icon-size;
        height: icon-size;
        vertical-align: bottom;
    }

    :hover {
        fill:  #777;
    }
}

/* 关闭页面的图标 */
#icon-close {
    // right: 0;
}

.icon-fix {
    // right: 10%;
    display: none;
}

.icon-pronounce {
    position: static;

    svg {
		padding-bottom: 1%; 
    }

    :hover {
        fill: color-primary !important;
    }
}

.icon-copy {
    position: absolute;
    font-size: x-large;
    right: -10%;
    top: 0;    
}

/**
 * end icon style
 */
/**
 * start scrollbar style
 */
::-webkit-scrollbar {
    width: 10px;
    background: rgba(118, 176, 243, 0.3);
    border-radius: 5px;
}

::-webkit-scrollbar-button {
    display: none;
}

::-webkit-scrollbar-thumb {
    width: 8px;
    min-height: 15px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 5px;

    :hover {
        background: rgba(0, 0, 0, 0.6);
    }
}

::-webkit-scrollbar-track {
    background-color: #fff;
}

::-webkit-scrollbar-track-piece {
    background: #fff;
}

/**
 * end scrollbar style
 */
