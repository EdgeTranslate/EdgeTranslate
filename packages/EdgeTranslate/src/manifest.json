{
    "name": "__MSG_AppName__",
    "description": "__MSG_Description__",
    "default_locale": "en",
    "{{chrome}}.manifest_version": 3,
    "{{firefox}}.manifest_version": 3,
    "icons": {
        "16": "icon/16.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "{{chrome}}.action": {
        "default_popup": "popup/index.html"
    },
    "{{firefox}}.browser_action": {
        "default_popup": "popup/index.html"
    },
    "background": {
        "{{chrome}}.service_worker": "background/background.ts",
        "{{firefox}}.scripts": ["background/background.ts"]
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": true
    },
    "host_permissions": ["<all_urls>"],
    "{{chrome}}.permissions": [
        "notifications",
        "contextMenus",
        "storage",
        "cookies",
        "tabs",
        "webRequest"
    ],
    "{{firefox}}.permissions": [
        "notifications",
        "contextMenus",
        "storage",
        "cookies",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],
    "{{chrome}}.content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "{{chrome}}.homepage_url": "https://github.com/EdgeTranslate/EdgeTranslate/wiki",
    "{{chrome}}.content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/display/index.jsx", "content/pdf.js"]
        },
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["content/select/select.js"],
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["content/banner_controller.js"]
        },
        {
            "matches": ["*://*.deepl.com/*"],
            "js": ["content/deepl_injector.js"],
            "all_frames": true
        }
    ],
    "{{firefox}}.content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/display/index.jsx"]
        },
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["content/select/select.js"],
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["content/banner_controller.js"]
        },
        {
            "matches": ["*://*.deepl.com/*"],
            "js": ["content/deepl_injector.js"],
            "all_frames": true
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Q"
            }
        },
        "change_language_setting": {
            "description": "__MSG_ChangeLanguageSetting__"
        },
        "translate_selected": {
            "description": "__MSG_TranslateSelectedText__"
        },
        "fix_result_frame": {
            "suggested_key": {
                "default": "Alt+X"
            },
            "description": "__MSG_FixResultFrame__"
        },
        "close_result_frame": {
            "suggested_key": {
                "default": "Alt+C"
            },
            "description": "__MSG_CloseResultFrame__"
        },
        "exchange_source_target_lang": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "__MSG_ExchangeSourceAndTargetLanguage__"
        },
        "pronounce_selected": {
            "description": "__MSG_PronounceSelected__"
        },
        "pronounce_original": {
            "description": "__MSG_PronounceOriginal__"
        },
        "pronounce_translated": {
            "description": "__MSG_PronounceTranslated__"
        },
        "copy_result": {
            "description": "__MSG_CopyResult__"
        },
        "change_mutual_translate": {
            "description": "__MSG_MutualTranslation__"
        },
        "translate_page": {
            "description": "__MSG_TranslatePage__"
        },
        "cancel_page_translate": {
            "description": "__MSG_CancelPageTranslate__"
        },
        "toggle_page_translate_banner": {
            "description": "__MSG_TogglePageTranslateBanner__"
        }
    },
    "web_accessible_resources": [
        {
            "resources": ["**/*.css", "**/*.png", "google/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
