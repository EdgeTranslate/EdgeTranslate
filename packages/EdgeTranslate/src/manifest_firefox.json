{
    "applications": {
        "gecko": {
            "id": "nickyfeng@edgetranslate.com",
            "strict_min_version": "60.0"
        }
    },
    "permissions": [
        "notifications",
        "contextMenus",
        "storage",
        "cookies",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./content/display/display.js"]
        },
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["./content/select/select.js"],
            "css": ["./content/select/select.css"],
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["./content/banner_controller.js"]
        },
        {
            "matches": ["*://*.deepl.com/*"],
            "js": ["./content/deepl_injector.js"],
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
