{
    "name": "edge_translate",
    "version": "2.2.1",
    "description": "A translator extension.",
    "keywords": [
        "Edge Translate",
        "侧边翻译"
    ],
    "contributors": [
        {
            "name": "nickyc975",
            "email": "chenjinlong2016@outlook.com",
            "url": "https://github.com/nickyc975"
        },
        {
            "name": "Mark-Fenng",
            "email": "f18846188605@gmail.com",
            "url": "https://github.com/Mark-Fenng"
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/EdgeTranslate/EdgeTranslate.git"
    },
    "scripts": {
        "test": "jest",
        "format": "eslint 'src/**/*.js' 'config/**/*.js' --fix",
        "dev:chrome": "gulp dev --browser chrome",
        "dev:firefox": "gulp dev --browser firefox",
        "build:chrome": "gulp build --browser chrome",
        "build:firefox": "gulp build --browser firefox",
        "pack:chrome": "gulp pack --browser chrome",
        "pack:firefox": "gulp pack --browser firefox",
        "e2e:chrome": "SELENIUM_BROWSER=chrome jest -i --config './test/e2e/jest/jest.config.js'",
        "e2e:firefox": "SELENIUM_BROWSER=firefox jest -i --config './test/e2e/jest/jest.config.js'"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/eslint-parser": "^7.14.7",
        "@babel/plugin-transform-react-jsx": "^7.14.5",
        "@babel/preset-env": "^7.14.5",
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@svgr/webpack": "^5.5.0",
        "adm-zip": "^0.5.5",
        "axios": "^0.21.1",
        "axios-mock-adapter": "^1.19.0",
        "babel-loader": "^8.2.1",
        "chromedriver": "^91.0.1",
        "crypto": "^1.0.1",
        "css": "^3.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "del": "^6.0.0",
        "eslint": "^7.29.0",
        "eslint-config-preact": "^1.1.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-html": "^6.1.2",
        "eslint-plugin-prettier": "^3.4.0",
        "geckodriver": "^1.22.3",
        "gulp": "^4.0.2",
        "gulp-eslint": "^6.0.0",
        "gulp-stylus": "^2.7.0",
        "gulp-terser": "^2.0.1",
        "gulp-zip": "^5.1.0",
        "husky": "^4.3.8",
        "jest": "^27.0.5",
        "jest-image-snapshot": "^4.5.0",
        "jest-raw-loader": "^1.0.1",
        "lodash": "^4.17.21",
        "merge-stream": "^2.0.0",
        "minimist": "^1.2.5",
        "mockttp": "^1.2.2",
        "prettier": "^2.3.1",
        "querystring": "^0.2.1",
        "raw-loader": "^4.0.2",
        "selenium-webdriver": "^4.0.0-beta.4",
        "webpack": "^5.40.0",
        "webpack-merge": "^5.8.0",
        "webpack-stream": "^6.1.2"
    },
    "dependencies": {
        "dompurify": "^2.2.8",
        "preact": "^10.5.13",
        "preact-render-to-string": "^5.1.19",
        "react-shadow": "^19.0.2",
        "react-use": "^17.2.4",
        "resize-observer-polyfill": "^1.5.1",
        "simplebar-react": "^2.3.4",
        "styled-components": "^5.3.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "jsdom",
        "testRegex": "(/test/unit/.*\\.(test|spec))\\.(ts|tsx|js)$",
        "testTimeout": 10000,
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest",
            "\\.(css|less)$": "jest-raw-loader"
        },
        "moduleDirectories": [
            "node_modules",
            "src"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
